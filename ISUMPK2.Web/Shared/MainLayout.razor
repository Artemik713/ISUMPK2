@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization


<PageTitle>ИСУ ПМК - УралТехПром</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="page">
            <main class="full-width">
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </NotAuthorized>
</AuthorizeView>

<style>
    .full-width {
        width: 100%;
        margin-left: 0;
    }
</style>
