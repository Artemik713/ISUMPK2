<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ISUPMK.Mobile.ViewModels"
             x:Class="ISUPMK.Mobile.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Title="{Binding Title}">

	<Grid RowDefinitions="Auto,*,Auto"
          Padding="20">


		<VerticalStackLayout Grid.Row="0"
                             Spacing="10"
                             Margin="0,40,0,0">
			<Image Source="logo.png"
                   HeightRequest="100"
                   HorizontalOptions="Center" />
			<Label Text="ИСУ ПМК"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
			<Label Text="Информационная система управления производством металлоконструкций"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
		</VerticalStackLayout>


		<VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             Spacing="20">
			<Entry Placeholder="Имя пользователя"
                   Text="{Binding Username}" />
			<Entry Placeholder="Пароль"
                   IsPassword="True"
                   Text="{Binding Password}" />


			<Label Text="{Binding ErrorMessage}"
                   IsVisible="{Binding HasError}"
                   TextColor="Red"
                   HorizontalOptions="Center" />


			<Button Text="Войти"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    HorizontalOptions="Fill" />


			<ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center" />
		</VerticalStackLayout>


		<Label Grid.Row="2"
               Text="© 2025 ИСУ ПМК"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />
	</Grid>

</ContentPage>
